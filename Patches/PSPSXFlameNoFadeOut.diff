+void A_UpdateFlamePSX(kexSlaveActor@ actor)
+{
+    actor.m_fFizzleTime += 0.5f;
+    const float fT = actor.m_fFizzleTime / PROJECTILE_FLAME_LIFETIME;
+    
+    actor.GetScale() += ((5000 - ((actor.m_fFizzleTime * 65536) / 512)) / 128) / 256;
+    
+    kVec3 vColor = actor.GetColor();
+    vColor.x = 1.0f + (1.0f - 1.0f) * fT;
+    vColor.y = 1.0f + (0.25f - 1.0f) * fT;
+    vColor.z = 1.0f + (0.0625f - 1.0f) * fT;
+    actor.GetColor() = vColor;
+    
+    if(actor.m_fFizzleTime >= PROJECTILE_FLAME_LIFETIME)
+    {
+        actor.Remove();
+        return;
+    }
+}
